#! /usr/bin/env nix-shell
(* -*- mode: tuareg -*-
#! nix-shell -i ocaml -p ocaml
 *)

#use "util.ml"

let usage =
  "hello [name]

A program that greets the user.  If no name is provided then it \
outputs \"Hello, World!\"\n"

let name_option = ref "World"

let anon_param name = name_option := name

let say_hello name =
  Printf.printf "Hello, %s!\n" name

let () =
  let spec = [] in
  Arg.parse (Arg.align spec) anon_param usage;
  say_hello !name_option
